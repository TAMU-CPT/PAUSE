<?xml version="1.0"?>
<tool id="edu.tamu.cpt.pause2.analysis" name="PAUSE2 Analaysis" version="0.1">
  <description>run PAUSE analysis</description>
  <version_command>python pause_analysis.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">pause_analysis.py
--galaxy
--outfile_supporting $__new_file_path__
--genome "${genome}"

--starts_f "${starts_f}"

--starts_r "${starts_r}"

--cov_f "${cov_f}"

--cov_r "${cov_r}"

--bam_file "${bam_file}"

--wig_f "${wig_f}"

--wig_f_files_path "${wig_f.files_path}"

--wig_f_format "${wig_f_format}"

--wig_f_id "${wig_f.id}"

--wig_r "${wig_r}"

--wig_r_files_path "${wig_r.files_path}"

--wig_r_format "${wig_r_format}"

--wig_r_id "${wig_r.id}"

--pause_report "${pause_report}"

--pause_report_files_path "${pause_report.files_path}"

--pause_report_format "${pause_report_format}"

--pause_report_id "${pause_report.id}"

--repeat_region_list "${repeat_region_list}"

--repeat_region_list_files_path "${repeat_region_list.files_path}"

--repeat_region_list_format "${repeat_region_list_format}"

--repeat_region_list_id "${repeat_region_list.id}"

</command>
  <inputs>
    <param help="Genome (for length)" label="genome" name="genome" optional="False" type="data"/>
    <param help="+ strand start wig data" label="starts_f" name="starts_f" optional="False" type="data"/>
    <param help="- strand start wig data" label="starts_r" name="starts_r" optional="False" type="data"/>
    <param help="+ strand start wig data" label="cov_f" name="cov_f" optional="False" type="data"/>
    <param help="- strand start wig data" label="cov_r" name="cov_r" optional="False" type="data"/>
    <param help="Bam File" label="bam_file" name="bam_file" optional="False" type="data"/>
    <param help="+ strand PAUSE wig results" label="Format of wig_f" name="wig_f_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
    <param help="- strand PAUSE wig results" label="Format of wig_r" name="wig_r_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
    <param help="PAUSE Report" label="Format of pause_report" name="pause_report_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
    <param help="Repeat Region List" label="Format of repeat_region_list" name="repeat_region_list_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
  </inputs>
  <outputs>
    <data format="TXT" name="wig_f">
      <change_format>
        <when format="txt" input="wig_f_format" value="CONF"/>
        <when format="txt" input="wig_f_format" value="TXT"/>
      </change_format>
    </data>
    <data format="TXT" name="wig_r">
      <change_format>
        <when format="txt" input="wig_r_format" value="CONF"/>
        <when format="txt" input="wig_r_format" value="TXT"/>
      </change_format>
    </data>
    <data format="TXT" name="pause_report">
      <change_format>
        <when format="txt" input="pause_report_format" value="CONF"/>
        <when format="txt" input="pause_report_format" value="TXT"/>
      </change_format>
    </data>
    <data format="TXT" name="repeat_region_list">
      <change_format>
        <when format="txt" input="repeat_region_list_format" value="CONF"/>
        <when format="txt" input="repeat_region_list_format" value="TXT"/>
      </change_format>
    </data>
  </outputs>
  <help>Extract read start from BAM files to Wig format for PAUSE.

Usage:
    bam_to_wiggle.py &lt;BAM file&gt;

</help>
  <tests/>
</tool>
