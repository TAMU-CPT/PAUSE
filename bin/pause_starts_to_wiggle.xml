<?xml version="1.0"?>
<tool id="edu.tamu.cpt.pause2.starts_to_wiggle" name="PAUSE2 BAM to Starts Wiggle" version="0.1">
  <description>create wiggle file from starts information</description>
  <version_command>python pause_starts_to_wiggle.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">pause_starts_to_wiggle.py
--galaxy
--outfile_supporting $__new_file_path__
--bam_file "${bam_file}"

--wig_f "${wig_f}"

--wig_f_files_path "${wig_f.files_path}"

--wig_f_format "${wig_f_format}"

--wig_f_id "${wig_f.id}"

--wig_r "${wig_r}"

--wig_r_files_path "${wig_r.files_path}"

--wig_r_format "${wig_r_format}"

--wig_r_id "${wig_r.id}"

</command>
  <inputs>
    <param help="Bam File" label="bam_file" name="bam_file" optional="False" type="data"/>
    <param help="+ strand wig data" label="Format of wig_f" name="wig_f_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
    <param help="- strand wig data" label="Format of wig_r" name="wig_r_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
  </inputs>
  <outputs>
    <data format="TXT" name="wig_f">
      <change_format>
        <when format="txt" input="wig_f_format" value="CONF"/>
        <when format="txt" input="wig_f_format" value="TXT"/>
      </change_format>
    </data>
    <data format="TXT" name="wig_r">
      <change_format>
        <when format="txt" input="wig_r_format" value="CONF"/>
        <when format="txt" input="wig_r_format" value="TXT"/>
      </change_format>
    </data>
  </outputs>
  <help>Extract read start from BAM files to Wig format for PAUSE.

Usage:
    bam_to_wiggle.py &lt;BAM file&gt;

</help>
  <tests/>
</tool>
