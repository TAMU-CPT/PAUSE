<?xml version="1.0"?>
<tool id="edu.tamu.cpt.pause2.plotter" name="PAUSE2 Plotter" version="0.3">
  <description>run PAUSE plotting</description>
  <version_command>python pause_plotter.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">pause_plotter.py
--galaxy
--outfile_supporting $__new_file_path__
#for $item in $repeat_coverage:
--coverage "${item.coverage}"
#end for

#for $item in $repeat_starts:
--starts "${item.starts}"
#end for

#for $item in $repeat_highlights:
--highlights "${item.highlights}"
#end for

--pause_plot "${pause_plot}"

--pause_plot_files_path "${pause_plot.files_path}"

--pause_plot_format "${pause_plot_format}"

--pause_plot_id "${pause_plot.id}"

</command>
  <inputs>
    <repeat name="repeat_coverage" title="Coverage">
      <param help="Coverage files" label="coverage" name="coverage" optional="True" type="data"/>
    </repeat>
    <repeat name="repeat_starts" title="Starts">
      <param help="Start files" label="starts" name="starts" optional="True" type="data"/>
    </repeat>
    <repeat name="repeat_highlights" title="Highlights">
      <param help="Data Highlights" label="highlights" name="highlights" optional="True" type="data"/>
    </repeat>
    <param help="PAUSE Plot" label="Format of pause_plot" name="pause_plot_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
  </inputs>
  <outputs>
    <data format="TXT" name="pause_plot">
      <change_format>
        <when format="txt" input="pause_plot_format" value="CONF"/>
        <when format="txt" input="pause_plot_format" value="TXT"/>
      </change_format>
    </data>
  </outputs>
  <help>PAUSE: Plotter
</help>
  <tests/>
</tool>
